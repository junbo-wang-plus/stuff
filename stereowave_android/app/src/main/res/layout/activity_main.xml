<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="StereoWave Camera Capture"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="24dp"
            android:textColor="@android:color/black" />

        <!-- Phone ID -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone ID:"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/phoneIdEdit"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Enter LEFT or RIGHT"
            android:inputType="textCapCharacters"
            android:maxLength="10"
            android:layout_marginBottom="16dp"
            android:background="@drawable/edit_text_background"
            android:padding="12dp" />

        <!-- UTC Time Controls -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UTC Timing:"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/currentUtcText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Current UTC: --:--:--"
            android:textSize="16sp"
            android:gravity="center"
            android:background="#E3F2FD"
            android:padding="8dp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/targetUtcText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Target: Not set"
            android:textSize="14sp"
            android:gravity="center"
            android:background="#FFF3E0"
            android:padding="8dp"
            android:layout_marginBottom="16dp" />

        <!-- Date/Time Selection -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/startDateButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Date: 2025-06-07"
                android:layout_marginEnd="8dp"
                style="@style/Widget.AppCompat.Button.Colored" />

            <Button
                android:id="@+id/startTimeButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Time: 15:30:00 UTC"
                android:layout_marginStart="8dp"
                style="@style/Widget.AppCompat.Button.Colored" />

        </LinearLayout>

        <!-- Sampling Rate -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sampling Rate:"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <Spinner
            android:id="@+id/samplingRateSpinner"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="16dp" />

        <!-- Duration -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Capture Duration:"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <Spinner
            android:id="@+id/durationSpinner"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="16dp" />

        <!-- Sensor Options -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Additional Sensors:"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <CheckBox
            android:id="@+id/gpsCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Log GPS data"
            android:layout_marginBottom="8dp" />

        <CheckBox
            android:id="@+id/imuCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Log IMU data (accelerometer, gyroscope, magnetometer)"
            android:layout_marginBottom="16dp" />

        <!-- Control Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/scheduleButton"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:text="SCHEDULE"
                android:textSize="18sp"
                android:textStyle="bold"
                android:background="@android:color/holo_green_dark"
                android:textColor="@android:color/white"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/stopButton"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:text="STOP"
                android:textSize="18sp"
                android:textStyle="bold"
                android:background="@android:color/holo_red_dark"
                android:textColor="@android:color/white"
                android:layout_marginStart="8dp" />

        </LinearLayout>

        <!-- Status Display -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            xmlns:app="http://schemas.android.com/apk/res-auto">

            <TextView
                android:id="@+id/statusText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Initializing..."
                android:textSize="14sp"
                android:padding="16dp"
                android:background="@android:color/white"
                android:minHeight="120dp"
                android:gravity="top" />

        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
